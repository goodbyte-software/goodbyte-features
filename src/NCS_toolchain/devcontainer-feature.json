{
    "id": "NCS_toolchain",
    "version": "1.0.0",
    "name": "NCS Toolchain",
    "description": "This feature includes tools neeeded to develop applications in the NCS environment.",
    "dependsOn": {
        "ghcr.io/goodbyte-software/goodbyte-features/dev-dependencies:latest": {

            "ninja_version": "1.10.2",
            "device_tree_compiler": "true"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        }
        
    },
    "options": {
        "version": {
            "type": "string",
            "enum": ["0.16.8", "2.5.2"],
            "default": "0.16.8",
            "description": "The version of toolchain to use."
        },
        "Architecture": {
            "type": "string",
            "enum": [
                "arm",
                "aarch64",
                "arc",
                "arc64",
                "microblazeel",
                "mips",
                "nios2",
                "riscv64",
                "sparc",
                "x86_64",
                "xtensa-dc233c",
                "xtensa-espressif_esp32",
                "xtensa-espressif_esp32s2",
                "xtensa-espressif_esp32s3",
                "xtensa-intel_ace15_mtpm",
                "xtensa-intel_tgl_adsp",
                "xtensa-mtk_mt8195_adsp",
                "xtensa-nxp_imx8m_adsp",
                "xtensa-nxp_imx8ulp_adsp",
                "xtensa-nxp_imx_adsp",
                "xtensa-nxp_rt500_adsp",
                "xtensa-nxp_rt600_adsp",
                "xtensa-sample_controller"
            ],
            "default": "arm64",
            "description": "The architecture of the toolchain."
        }
    }

}
